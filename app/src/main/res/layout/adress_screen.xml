<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/top_screen_bar"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/img_back_button"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@color/top_screen_bar"
            android:contentDescription="@string/arrow_button"
            android:gravity="center"
            android:padding="10dp"
            android:src="@drawable/arrow_image"
            app:layout_constraintStart_toStartOf="@id/cadastro_responsavel_txt" />

        <TextView
            android:id="@+id/cadastro_responsavel_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_gravity="center"
            android:text="@string/cadastro_de_responsavel"
            android:textColor="@color/gray_login_screen"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintHeight="wrap_content"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintWidth="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:text="@string/endereco"
        android:textColor="@color/login_txt_color"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/nested_scroll_view"
        app:layout_constraintTop_toBottomOf="@id/tab_layout" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/gray_login_screen"
        app:layout_constraintTop_toBottomOf="@id/endereco" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintBottom_toTopOf="@id/bottom_tab_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/rua"
                android:textColor="@color/gray_login_screen"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/rua_txt"
                app:layout_constraintTop_toBottomOf="@id/parent"
                app:layout_constraintStart_toStartOf="@id/parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/rua_txt"
                android:layout_width="359dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_circle_background"
                android:hint="@string/rua_hint"
                android:inputType="text"
                android:paddingStart="15dp"
                android:textAlignment="textStart"
                android:textColor="@color/gray_login_screen"
                android:textColorHint="@color/login_txt_color"
                app:layout_constraintTop_toBottomOf="@id/rua"
                app:layout_constraintBottom_toTopOf="@id/cidade_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/cidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/cidade_field"
                android:textColor="@color/gray_login_screen"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/rua_txt"
                app:layout_constraintBottom_toTopOf="@id/cidade_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/cidade_txt"
                android:layout_width="359dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_circle_background"
                android:hint="@string/cidade_hint"
                android:inputType="text"
                android:textAlignment="textStart"
                android:paddingStart="15dp"
                android:textColor="@color/gray_login_screen"
                android:textColorHint="@color/login_txt_color"
                app:layout_constraintTop_toBottomOf="@id/cidade"
                app:layout_constraintBottom_toTopOf="@id/estado"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/estado_field"
                android:textColor="@color/gray_login_screen"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/cidade_txt"
                app:layout_constraintBottom_toTopOf="@id/estado_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/estado_txt"
                android:layout_width="359dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_circle_background"
                android:hint="@string/estado_hint"
                android:inputType="text"
                android:textAlignment="textStart"
                android:paddingStart="15dp"
                android:textColor="@color/gray_login_screen"
                android:textColorHint="@color/login_txt_color"
                app:layout_constraintTop_toBottomOf="@id/estado"
                app:layout_constraintBottom_toTopOf="@id/bairro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/bairro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/bairro_field"
                android:textColor="@color/gray_login_screen"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/estado_txt"
                app:layout_constraintBottom_toTopOf="@id/bairro_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/bairro_txt"
                android:layout_width="359dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_circle_background"
                android:hint="@string/bairro_hint"
                android:inputType="text"
                android:textAlignment="textStart"
                android:paddingStart="15dp"
                android:textColor="@color/gray_login_screen"
                android:textColorHint="@color/login_txt_color"
                app:layout_constraintTop_toBottomOf="@id/bairro"
                app:layout_constraintBottom_toTopOf="@id/complemento"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/complemento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/complemento"
                android:textColor="@color/gray_login_screen"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/bairro_txt"
                app:layout_constraintBottom_toTopOf="@id/complemento_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/complemento_txt"
                android:layout_width="359dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_circle_background"
                android:hint="@string/detalhes_endereco"
                android:inputType="text"
                android:textAlignment="textStart"
                android:paddingStart="15dp"
                android:textColor="@color/gray_login_screen"
                android:textColorHint="@color/login_txt_color"
                app:layout_constraintTop_toBottomOf="@id/complemento"
                app:layout_constraintBottom_toTopOf="@id/cep"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/cep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/cep_field"
                android:textColor="@color/gray_login_screen"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/complemento_txt"
                app:layout_constraintBottom_toTopOf="@id/cep_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/cep_txt"
                android:layout_width="359dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_circle_background"
                android:hint="@string/cep_hint"
                android:inputType="number"
                android:textAlignment="textStart"
                android:paddingStart="15dp"
                android:textColor="@color/gray_login_screen"
                android:textColorHint="@color/login_txt_color"
                app:layout_constraintBottom_toTopOf="@id/cep_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cep" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/proceed_button"
        app:layout_constraintEnd_toEndOf="nested_scroll_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nested_scroll_view">

        <ImageButton
            android:id="@+id/ellipse_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            android:layout_margin="5dp"
            android:src="@drawable/icon_gray_ellipse" />

        <ImageButton
            android:id="@+id/ellipse_2"
            android:background="@color/background_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/icon_blue_ellipse" />

        <ImageButton
            android:id="@+id/ellipset_3"
            android:background="@color/background_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/icon_gray_ellipse" />

        <ImageButton
            android:id="@+id/dellipse_4"
            android:background="@color/background_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/icon_gray_ellipse" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/proceed_button"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginBottom="32dp"
        android:padding="10dp"
        android:src="@drawable/icon_proceed_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>