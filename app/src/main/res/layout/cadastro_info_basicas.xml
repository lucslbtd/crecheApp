<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/top_screen_bar"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/img_back_button"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@color/top_screen_bar"
            android:gravity="center"
            android:padding="10dp"
            android:src="@drawable/arrow_image"
            app:layout_constraintStart_toStartOf="@id/cadastro_responsavel_txt"
            android:contentDescription="@string/arrow_button" />

        <TextView
            android:id="@+id/cadastro_responsavel_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="70dp"
            android:text="@string/cadastro_de_creche"
            android:textColor="@color/gray_login_screen"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintHeight="wrap_content"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintWidth="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_info_basicas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:text="@string/info_basicas"
        android:textColor="@color/login_txt_color"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/nested_scroll_view"
        app:layout_constraintTop_toBottomOf="@id/tab_layout" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/ellipsis_button"
        app:layout_constraintTop_toBottomOf="@id/txt_info_basicas"
        />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintBottom_toTopOf="@id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nome_creche_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/nome_creche"
                android:textColor="@color/gray_login_screen"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/nome_creche"
                app:layout_constraintTop_toBottomOf="@id/parent"
                app:layout_constraintStart_toStartOf="@id/parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/nome_creche"
                android:layout_width="359dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_circle_background"
                android:textAlignment="textStart"
                android:textColor="@color/gray_login_screen"
                android:textColorHint="@color/gray_login_screen"
                app:layout_constraintTop_toBottomOf="@id/nome_creche_txt"
                app:layout_constraintBottom_toTopOf="@id/nome_responsavel_creche_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/nome_responsavel_creche_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/nome_creche_responsavel"
                android:textColor="@color/gray_login_screen"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/nome_creche"
                app:layout_constraintBottom_toTopOf="@id/nome_responsavel_creche"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/nome_responsavel_creche"
                android:layout_width="359dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_circle_background"
                android:textAlignment="textStart"
                android:textColor="@color/gray_login_screen"
                android:textColorHint="@color/gray_login_screen"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/nome_responsavel_creche_txt"
                app:layout_constraintBottom_toTopOf="@id/contact_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/contact_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/contato"
                android:textColor="@color/gray_login_screen"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/nome_responsavel_creche"
                app:layout_constraintBottom_toTopOf="@id/contact"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/contact"
                android:layout_width="359dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_circle_background"
                android:inputType="phone"
                android:digits="0123456789+"
                android:textAlignment="textStart"
                android:textColor="@color/gray_login_screen"
                android:textColorHint="@color/gray_login_screen"
                app:layout_constraintTop_toBottomOf="@id/contact_txt"
                app:layout_constraintBottom_toTopOf="@id/sobre_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sobre_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/sobre_creche"
                    android:textColor="@color/gray_login_screen"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/contact"
                    app:layout_constraintBottom_toTopOf="@id/sobre"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/max_char_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/limite_caractere"
                    android:textColor="@color/gray_login_screen"
                    android:textSize="11sp"
                    app:layout_constraintTop_toBottomOf="@id/contact"
                    app:layout_constraintBottom_toTopOf="@id/sobre"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </LinearLayout>

            <EditText
                android:id="@+id/sobre"
                android:layout_width="359dp"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_circle_background"
                android:inputType="text"
                android:textAlignment="textStart"
                android:textColor="@color/gray_login_screen"
                android:textColorHint="@color/gray_login_screen"
                app:layout_constraintTop_toBottomOf="@id/sobre_txt"
                app:layout_constraintBottom_toTopOf="@id/sobre"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="359dp"
                android:layout_height="55dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:src="@drawable/icon_add">

                </ImageButton>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/btn_registrate"
        app:layout_constraintTop_toBottomOf="@id/nested_scroll_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/dot_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:text="@string/ellipsis"
            android:textColor="@color/ellipsis_button"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/dot_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/ellipsis"
            android:textColor="@color/ellipsis_button"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/dot_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/ellipsis"
            android:textColor="@color/ellipsis_button"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/dot_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ellipsis"
            android:textColor="@color/button_login_color"
            android:textSize="24sp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_registrate"
        style="@style/btn_login_style"
        android:layout_width="359dp"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/btn_txt_sign_up"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>