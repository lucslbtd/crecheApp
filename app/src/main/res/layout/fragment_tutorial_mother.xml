<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_welcome_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/welcome_tutorial_description"
        android:textColor="@color/login_txt_color"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/iv_tutorial_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="logo"
        android:layout_marginTop="82dp"
        android:src="@drawable/tutorial_mother_image"
        app:layout_constraintTop_toBottomOf="@id/txt_welcome_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/txt_welcome_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/mae_tutorial_description"
        android:textColor="@color/login_txt_color"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_tutorial_start"
        />

    <LinearLayout
        android:id="@+id/ellipseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/txt_welcome_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/ellipse_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/background_color"
            android:src="@drawable/icon_gray_ellipse"
             />

        <ImageButton
            android:id="@+id/ellipse_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/background_color"
            android:src="@drawable/icon_blue_ellipse"
             />

        <ImageButton
            android:id="@+id/ellipset_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/background_color"
            android:src="@drawable/icon_gray_ellipse" />

        <ImageButton
            android:id="@+id/dellipse_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/background_color"
            android:src="@drawable/icon_gray_ellipse" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/proceed_button"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/txt_welcome_description"
        android:src="@drawable/icon_proceed_arrow"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="@id/ellipseLayout"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>